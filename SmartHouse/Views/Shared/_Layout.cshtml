<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    html, body, h1, h2, h3, h4, h5 {
        font-family: "Raleway", sans-serif;
    }
</style>
<body>
    <div>
        <!-- Header -->
        <header class="w3-container" style="padding-top:22px">
            <h5><b><i class="fa fa-dashboard"></i> My Dashboard</b></h5>
        </header>

            <div class="w3-row-padding w3-margin-bottom">
                <a href="/Home/TemperatureHumidity">
                    <div class="w3-quarter">
                        <div class="w3-container w3-red w3-padding-16">
                            <div class="w3-left"><i class="fa fa-thermometer-2 w3-xxxlarge"></i></div>
                            <div class="w3-right">
                            </div>
                            <div class="w3-clear"></div>
                            <h4>Temperature & Humidity</h4>
                        </div>
                </a>
            </div>
            <div class="w3-quarter">
                <a href="/Home/MotionDetection">
                    <div class="w3-container w3-blue w3-padding-16">
                        <div class="w3-left"><i class="fa fa-eye w3-xxxlarge"></i></div>
                        <div class="w3-right">
                        </div>
                        <div class="w3-clear"></div>
                        <h4>Motion Detection</h4>
                    </div>
                </a>
            </div>
            <div class="w3-quarter">
                <a href="/Home/SoundDetection">
                    <div class="w3-container w3-teal w3-padding-16">
                        <div class="w3-left"><i class="fa fa-volume-up w3-xxxlarge"></i></div>
                        <div class="w3-right">
                        </div>
                        <div class="w3-clear"></div>
                        <h4>Sound Detection</h4>
                    </div>
                 </a>
            </div>
            <div class="w3-quarter">
                <div class="w3-container w3-orange w3-text-white w3-padding-16">
                    <div class="w3-left"><i class="fa local_gas_station w3-xxxlarge"></i></div>
                    <div class="w3-right">
                    </div>
                    <div class="w3-clear"></div>
                    <h4>Gas Detection</h4>
                </div>
            </div>
   </div>
   <div>
       <div class="w3-row-padding w3-margin-bottom">
           <a href="/Home/Settings">
               <div class="w3-quarter">
                   <div class="w3-container w3-gray w3-padding-16">
                       <div class="w3-left"><i class="fa fa-list-alt w3-xxxlarge"></i></div>
                       <div class="w3-right">
                       </div>
                       <div class="w3-clear"></div>
                       <h4>Settings</h4>
                   </div>
           </a>
       </div>
    </div>
        @RenderBody()

    <script>

    </script>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
